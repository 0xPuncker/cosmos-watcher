# Test Environment Configuration

# Slack Integration (use a test webhook URL if available)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/TEST/WEBHOOK/URL

# GitHub API Configuration (can use the same as production)
GITHUB_API_URL=https://api.github.com

# Chain Registry Configuration (can use the same as production)
CHAIN_REGISTRY_BASE_URL=https://raw.githubusercontent.com/cosmos/chain-registry/master

# Server Configuration
PORT=8081  # Different port for test environment

# Logging Configuration
LOG_LEVEL=debug  # More verbose logging for tests

# Feature Flags
ENABLE_SLACK_NOTIFICATIONS=false  # Disable notifications in test environment
ENABLE_CHAIN_MONITORING=true

# Test-specific Configuration
TEST_MODE=true
CHAIN=osmosis  # Default chain for integration tests
